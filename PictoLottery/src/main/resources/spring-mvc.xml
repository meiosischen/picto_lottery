    <!-- 扫描Controller -->
    <context:component-scan base-package="com.picto.controller"/>
   <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
          <property name="prefix" value="/WEB-INF/jsp/" />
          <property name="suffix" value=".jsp" />
   </bean>

    <!-- 请求注入处理 -->
    <mvc:interceptors>
        <!-- 日志 -->
        <mvc:interceptor>
            <mvc:mapping path="/**" />
            <bean class="com.picto.interceptors.LogInterceptor">
                <!--<property name="hostname" value="${server.wallet.hostname}"/>-->
            </bean>
        </mvc:interceptor>
        <!-- 登录验证 -->
        <mvc:interceptor>
            <mvc:mapping path="/**" />
            <bean class="com.picto.interceptors.LoginInterceptor" />
        </mvc:interceptor>
    </mvc:interceptors>
</beans>